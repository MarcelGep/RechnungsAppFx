<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" style="-fx-background-color: #d4dad9;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="weddingPlaner.controllers.ChecklistController">
   <children>
      <VBox>
         <children>
            <HBox>
               <children>
                  <ToggleButton fx:id="tbOverview" mnemonicParsing="false" onAction="#onTbOverviewClicked" prefHeight="35.0" prefWidth="114.0" text="Übersicht" />
                  <ToggleButton fx:id="tbTest1" mnemonicParsing="false" onAction="#onTbTest1Clicked" prefHeight="35.0" prefWidth="114.0" text="Test1" />
                  <ToggleButton fx:id="tbTest2" mnemonicParsing="false" onAction="#onTbTest2Clicked" prefHeight="35.0" prefWidth="114.0" text="Test2" />
                  <Region />
               </children>
            </HBox>
            <HBox prefHeight="6.0" prefWidth="479.0" styleClass="back-red" />
            <TableView fx:id="tbTasks">
              <columns>
                <TableColumn fx:id="selectColumn" prefWidth="75.0" />
                <TableColumn fx:id="deleteColumn" prefWidth="75.0" />
                  <TableColumn fx:id="idColumn" prefWidth="52.5" text="ID" visible="false" />
                  <TableColumn fx:id="taskColumn" prefWidth="75.0" text="Aufgabe" />
                  <TableColumn fx:id="assigneeColumn" prefWidth="75.0" text="Person" />
                  <TableColumn fx:id="durationColumn" prefWidth="75.0" text="Dauer" />
                  <TableColumn fx:id="noteColumn" prefWidth="75.0" text="Notiz" />
              </columns>
            </TableView>
            <HBox alignment="CENTER" style="-fx-background-color: #f0f0f0;">
               <children>
                  <Button id="cancel_button" fx:id="btnRemoveSelection1" mnemonicParsing="false" onAction="#onRemoveSelectionBtnClicked" prefHeight="25.0" text="Auswahl aufheben" />
                  <Button id="save_button" fx:id="btnDeleteSelection1" mnemonicParsing="false" onAction="#onDeleteGuestsBtnClicked" prefHeight="25.0" text="Gäste Löschen" visible="false" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button id="save_button" fx:id="btnAddTask1" mnemonicParsing="false" onAction="#onAddTaskButtonClicked" prefHeight="25.0" text="Item Hinzufügen" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="25.0" left="40.0" right="40.0" top="25.0" />
   </padding>
   <stylesheets>
      <URL value="@../stylesheet/mainStyles.css" />
      <URL value="@../stylesheet/tableStyles.css" />
      <URL value="@../stylesheet/buttonStyles.css" />
   </stylesheets>
</VBox>
