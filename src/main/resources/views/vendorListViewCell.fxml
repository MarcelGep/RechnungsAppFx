<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="hBox" alignment="CENTER" onMouseEntered="#onVendorListCellEntered" onMouseExited="#onVendorListCellExited" stylesheets="@../stylesheet/tabPaneStyles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" spacing="15.0" HBox.hgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER" prefWidth="60.0" spacing="3.0">
               <children>
                  <ImageView fx:id="ivCategory" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="lbCategory" text="Label">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Label fx:id="lbVendorName" text="Label" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="btnEditVendor" mnemonicParsing="false" onAction="#onEditVendorButtonClicked" onMouseEntered="#onEditVendorButtonEntered" styleClass="back-transparent" visible="false">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/edit.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="btnDeleteVendor" mnemonicParsing="false" onAction="#onDeleteVendorButtonClicked" onMouseEntered="#onDeleteVendorButtonEntered" styleClass="back-transparent" stylesheets="@../stylesheet/tabPaneStyles.css" visible="false">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/trash.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</HBox>
